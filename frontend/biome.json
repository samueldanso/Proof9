{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"dist",
			".turbo",
			".vercel",
			".next",
			".git",
			".coverage",
			".vscode",
			"public",
			".cache"
		]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "space",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off",
				"useFocusableInteractive": "off",
				"useSemanticElements": "off",
				"useAltText": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "info",
					"fix": "safe",
					"options": {}
				}
			},
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off",
				"useBlockStatements": "off",
				"noUnusedTemplateLiteral": "off",
				"noUselessElse": "off",
				"useImportType": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "info"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
