# ===============================
# Web3 & Story Protocol Settings
# ===============================

# Required variables
WALLET_PRIVATE_KEY=<YOUR_WALLET_PRIVATE_KEY>  # Ethereum wallet private key without 0x prefix
PINATA_JWT=<YOUR_PINATA_JWT>                  # JWT for Pinata IPFS service

# Optional Web3 variables
STORY_NETWORK=aeneid                          # 'aeneid' or 'mainnet', defaults to 'aeneid'
RPC_PROVIDER_URL=                             # Custom RPC provider URL, uses public RPC by default
NFT_CONTRACT_ADDRESS=                         # Your custom NFT contract address
SPG_NFT_CONTRACT_ADDRESS=                     # Your custom SPG NFT contract address

# ===============================
# Server Settings
# ===============================

# Server configuration
PORT=3000                                     # Port for the Hono server
NODE_ENV=development                          # 'development' or 'production'
CORS_ORIGIN=*                                 # CORS allowed origins, use * for all or comma-separated URLs

# Optional server configuration
LOG_LEVEL=info                                # Log level: 'debug', 'info', 'warn', 'error'
REQUEST_TIMEOUT=30000                         # Request timeout in milliseconds
